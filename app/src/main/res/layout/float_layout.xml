<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="按住这个文字可以拖动"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/float_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收放" />

        <Button
            android:id="@+id/all_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行榜" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_qiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始抢庄" />

            <Button
                android:id="@+id/stop_qiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止抢庄" />

            <Button
                android:id="@+id/start_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始下注" />

            <Button
                android:id="@+id/stop_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止下注" />


            <Button
                android:id="@+id/send_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送结果" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/zhuang_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置庄底" />

            <Button
                android:id="@+id/set_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置抽水" />

            <Button
                android:id="@+id/up_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上分" />

            <Button
                android:id="@+id/down_zhuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下庄" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算分数" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>